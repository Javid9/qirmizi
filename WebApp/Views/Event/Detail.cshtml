@model EventVM

@{

    var lang = ViewBag.Lang ?? "az";
}



<section class="event-detail-section">
    <div class="detail-header" style="background-image: url(/assets/img/Image/tedbir-header.png);">
        <div class="container h-100">
            <div class="d-flex flex-column justify-content-center content">
                <div class="event-info">
                    <ul data-aos="fade-right" data-aos-easing="linear" data-aos-duration="500" data-aos-delay="150">
                        @if (Model?.GetEvent?.Categories != null)
                        {
                            @foreach (var category in Model.GetEvent.Categories)
                            {
                                <li class="subject mb-2">
                                    @category.Title
                                </li>
                            }
                        }

                    </ul>
                    <h2 class="title" data-aos="fade-right" data-aos-easing="linear" data-aos-duration="500" data-aos-delay="350">
                        @Model?.GetEvent?.Title
                    </h2>
                    <ul data-aos="fade-right" data-aos-easing="linear" data-aos-duration="500" data-aos-delay="550">
                        @if(Model?.GetEvent?.Speakers != null)
                        {
                            @foreach (var sepaker in Model.GetEvent.Speakers)
                            {
                                <li class="speaker-name">
                                    @sepaker.FullName
                                </li>
                            }
                        }

                    </ul>
                </div>
                <div class="event-bottom" data-aos="fade-right" data-aos-easing="linear" data-aos-duration="500"
                     data-aos-delay="800">
                    <p class="date"><strong></strong> @Model?.GetEvent?.CreateDate @Model?.GetEvent?.Clock</p>
                    <p class="price">@Model?.GetEvent?.Price</p>
                    <p class="packets">@Model?.GetEvent?.TicketType</p>
                    <p class="location d-flex align-items-center">
                        <i class="bi bi-geo-alt me-2"></i>
                        <span>@Model?.GetEvent?.Address</span>
                    </p>
                    <a href="@Model?.GetEvent?.Link" class="btn btn-ticket-sale">
                        BİLET AL
                        <img class="ms-3" src="/assets/img/icons/icon-ticket.svg" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="event-map-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="left-info">
                    <p>MƏLUMAT</p>
                    <h4 data-aos="fade-right" data-aos-easing="linear" data-aos-duration="350" data-aos-delay="150">
                        TƏDBİR HAQQINDA MƏLUMAT
                    </h4>
                    <article>
                        <p data-aos="fade-right" data-aos-easing="linear" data-aos-duration="350" data-aos-delay="250">
                           @Model?.GetEvent?.Text
                    </article>

                </div>

            </div>
            <div class="col-lg-6">
                @if(Model?.GetEvent?.Map != null)
                {
                    <div class="right-map ms-auto">
                        <iframe src="@Model.GetEvent.Map"
                                width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="circles circle-left d-none d-xl-block"></div>
</section>


<section class="event-speaker-section">
    <main class="container">
        <div class="header d-flex flex-column align-items-center text-center mx-auto">
            <p>TƏDBİRİN SPİKERLƏRİ</p>
            <h2 class="d-none d-lg-block">BU TƏDBİRDƏ ÇIXIŞ EDƏCƏK SPİKER KİMDİR?</h2>
        </div>
        <!-- loop row-->
       @foreach (var speaker in Model?.GetEvent?.Speakers!)
        {
            <div class="row flex-column-reverse flex-lg-row align-items-center speaker-event-card g-4">
                <div class="col-lg-8 col-xl-8">
                    <div class="speaker">
                        <p class="name">@speaker.FullName</p>
                        <p class="status">@speaker.Postion</p>
                        <p class="info-text">
                           @speaker.Text
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-xl-3 offset-xl-1" data-aos="fade-left" data-aos-easing="linear" data-aos-duration="350">
                    <div class="speaker-card">
                        <div class="speaker-top mb-0">
                            <img class="speaker-image" src="/assets/img/Image/blog-card-1.png" alt="">
                            <ul class="social-list d-flex align-items-center justify-content-between">

                               @if(speaker.Facebook != null){
                                    <li>
                                        <a href="@speaker.Facebook" target="_blank">
                                            <figure>
                                                <img class="svg" src="/assets/img/icons/facebook-icons.svg" alt="facebook icon">
                                            </figure>
                                        </a>
                                    </li>
                                }

                               @if(speaker.Instagram != null){
                                    <li>
                                        <a href="@speaker.Instagram" target="_blank">
                                            <figure>
                                                <img class="svg" src="/assets/img/icons/instagram-icons.svg" alt="instagram icon">
                                            </figure>
                                        </a>
                                    </li>
                                }

                               @if(speaker.Twitter != null){
                                    <li>
                                        <a href="@speaker.Twitter" target="_blank">
                                            <figure>
                                                <img class="svg" src="/assets/img/icons/twitter-icons.svg" alt="twitter icon">
                                            </figure>
                                        </a>
                                    </li>
                                }

                               @if(speaker.Linkedin != null){
                                    <li>
                                        <a href="@speaker.Linkedin" target="_blank">
                                            <figure>
                                                <img class="svg" src="/assets/img/icons/linkedin-icons.svg" alt="linkedin icon">
                                            </figure>
                                        </a>
                                    </li>
                                }

                            </ul>
                            <div class="square-gruop">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </main>
    <div class="box-top aos-bounce-in" data-aos data-aos-offset="300"></div>
    <div class="circles circles-left d-none d-lg-block"></div>
</section>


<section class="partner-section">
    <main class="container" data-aos="fade-up" data-aos-easing="linear" data-aos-duration="750">
        <h1 class="heading text-center">TƏDBİRİN TƏRƏFDAŞLARI</h1>
        <div class="col-12 col-xl-8 mx-auto g-5 row row-cols-2 row-cols-lg-3 logo-list">

            @if(Model.Photos != null)
            {
                @foreach (var photo in Model.Photos)
                {
                    <div class="col">
                        <a href="#" target="_blank" class="logo d-block mx-auto">
                            <figure>
                                <img src="~/@photo.FileCode" alt="partner-logo">
                            </figure>

                        </a>
                    </div>

                }
            }
        </div>
    </main>
</section>

