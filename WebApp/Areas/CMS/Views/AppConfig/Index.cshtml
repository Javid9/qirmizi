@using Domain.Dtos.AppConfig;
@model IEnumerable<AppConfigDto>

@{
    ViewData["Title"] = "Index";
}


<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <span class="page-header-icon"><i data-feather="filter"></i></span>
                        Sayt Parametri
                    </h1>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-xl px-4 mt-n10">
    <div class="card card-header-actions mb-4">
        <div class="card-header">
            Sayt Listesi
            <div class="rid">
                @if (Model.Count() > 0)
                {

                }
                else
                {
                    <a asp-action="Create" class="btn btn-sm btn-primary">Config Ekle</a>
                }

            </div>
        </div>
        <div class="card-body">
            <table id="datatablesSimple" class="table-shorting">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr data-id="@item?.Id">
                                <td>@item?.Email</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item?.Id" class="btn btn-datatable btn-icon btn-transparent-dark me-2"><i data-feather="more-vertical"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item?.Id" onclick="return confirm('Are you sure you want to delete it?')" class="btn btn-datatable btn-icon btn-transparent-dark"><i data-feather="trash-2"></i></a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
