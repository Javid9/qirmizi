@using Domain.Dtos.About
@model IEnumerable<AboutDto>

@{
    ViewData["Title"] = "Index";
}

<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <span class="page-header-icon"><i data-feather="filter"></i></span>
                        Haqqimzida
                    </h1>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-xl px-4 mt-n10">
    <div class="card card-header-actions mb-4">
        <div class="card-header">
             Haqqimzida
            <div class="rid">
                <a asp-action="Create" class="btn btn-sm btn-primary">Faq Elave Et</a>
            </div>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Sual</th>

                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var about in Model)
                    {
                        <tr data-id="@about.Id">

                            <td>@about.SlugUrl</td>
                            <td>
                                <a asp-action="Index" asp-controller="photo" asp-area="cms" asp-route-productId="@about?.Id" class="btn btn-datatable btn-icon btn-transparent-dark me-2"><i data-feather="image"></i></a>
                                <a asp-action="Update" asp-route-id="@about?.Id" class="btn btn-datatable btn-icon btn-transparent-dark me-2"><i data-feather="more-vertical"></i></a>
                                <a asp-action="Delete" asp-route-id="@about?.Id" onclick="return confirm('Are you sure you want to delete it?')" class="btn btn-datatable btn-icon btn-transparent-dark"><i data-feather="trash-2"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
