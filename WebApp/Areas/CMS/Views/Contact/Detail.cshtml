@using Domain.Dtos.Contact;
@model ContactDto

<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="container-xl px-4">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto mt-4">
                    <h1 class="page-header-title">
                        <span class="page-header-icon"><i data-feather="edit-3"></i></span>
                        Mektub Detay
                    </h1>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container-xl px-4 mt-n10">
    <form id="fromloading" asp-action="Delete" asp-antiforgery="true" enctype="multipart/form-data">
        <div class="row">
            <div class="col-xl-4">
                <div class="card mb-4">
                    <div class="card-header">@Model.FullName tarafından gelen mektub</div>
                    <div class="card-body">
                        
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input readonly type="text" class="form-control" asp-for="Email">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input readonly type="text" class="form-control" asp-for="FullName">
                        </div>


                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <input readonly type="text" class="form-control" asp-for="Phone">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Subject</label>
                            <input readonly type="text" class="form-control" asp-for="Subject">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mesaj</label>
                            <textarea readonly class="form-control" asp-for="Message" rows="5" cols="5"></textarea>
                        </div>


                        <div class="bn">
                            <a asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete it?')" class="btn  btn-danger">Sil</a>
                            <a asp-action="Index" class="btn  btn-dark">Imtina</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>
